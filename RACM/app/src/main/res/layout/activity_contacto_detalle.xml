<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:name="itesm.mx.racm.MenuFragment"
        android:id="@+id/fragment_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_menu"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/family"
        android:weightSum="1">

        <ImageButton
            android:background="@color/family"
            android:layout_width="218dp"
            android:layout_height="250dp"
            app:srcCompat="@drawable/family_contact"
            android:id="@+id/image_fotoPD"
            android:layout_margin="0dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.92">


            <ImageButton
                android:id="@+id/photo_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/modify_user"
                android:background="@color/family"
                android:paddingLeft="10dp"/>
            <LinearLayout
                android:paddingLeft="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Luis Mendez"
                    android:textSize="20dp"
                    android:textColor="#FFF"
                    android:paddingTop="10dp"
                    android:ems="10"
                    android:id="@+id/text_nombreCC" />


                <TextView
                    android:layout_width="216dp"
                    android:layout_height="wrap_content"
                    android:text="38499583"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:paddingTop="10dp"
                    android:ems="10"
                    android:id="@+id/text_telefonoCC" />


            </LinearLayout>

            <ImageButton
                android:id="@+id/photo_phone"
                android:background="@color/family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/contact_family_phone"/>




        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:layout_gravity="end">

            <ImageButton
                android:id="@+id/photo_icons"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icons_message"
                android:background="#FFF"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

