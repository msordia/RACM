<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="itesm.mx.racm.MenuFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.12" />

                <ImageButton
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/contactos"
                    android:id="@+id/image_button_contactos"
                    android:layout_weight="0.28"
                    android:layout_width="30dp" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="68dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/sos1"
                    android:id="@+id/image_button_ayuda" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/home"
                    android:background="@android:color/transparent"
                    android:id="@+id/image_button_casa"
                    android:layout_weight="0.22" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/perfil"
                    android:id="@+id/image_button_perfil"
                    android:layout_weight="0.29" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.09" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_weight="0.09" />

                <TextView
                    android:text="Contactos"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:id="@+id/text_contactos"
                    android:layout_weight="0.10"
                    android:layout_width="50dp" />

                <TextView
                    android:text="Â¡AYUDA!"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:id="@+id/text_ayuda"
                    android:layout_weight="0.34"
                    android:layout_width="50dp" />

                <TextView
                    android:text="Ir a Casa"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:id="@+id/text_casa"
                    android:textAlignment="center"
                    android:layout_weight="0.07" />

                <TextView
                    android:text="Mi Perfil"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:id="@+id/text_perfil"
                    android:layout_weight="0.20" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />


        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

</FrameLayout>
